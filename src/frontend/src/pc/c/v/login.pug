form.form-horizontal(name="form", novalidate, ng-submit="submit()")
    div.form-group
        label 账户
        input.form-control(type="text", ng-model="item.account", required)
    div.form-group
        label 密码
        input.form-control(type="password", ng-model="item.password", required)
    div.form-group
        input.btn.btn-default(type="submit", value="登陆", ng-disabled="form.$invalid")